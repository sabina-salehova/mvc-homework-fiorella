
@{
    List<SliderImage> sliderImages = Model.SliderImages;

    Slider slider = Model.Slider;

    List<Category> categories = Model.Categories;

    List<Product> products = Model.Products;

}

<!-- SLIDER START -->

<section id="slider">
    <div class="owl-carousel slider">
        @foreach (var sliderImage in sliderImages)
        {
            <div> <img src="~/img/@sliderImage.Name" alt=""> </div>
        }
    </div>
    <div class="container context pl-lg-5 ml-lg-3">
        <div class="row">
            <div class="col-lg-5">
                <div class="text">
                    @Html.Raw(@slider.Title)
                    <p class="text-black-50 d-none d-sm-block">
                        @slider.Subtitle
                    </p>
                </div>
                <div class="img">
                    <img src="~/img/@slider.SignatureImage" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SLIDER END -->
<!-- PRODUCTS START -->

<section id="products">
    <div class="container">
        <div class="row pt-5">
            <div class="col-12 d-flex justify-content-between">
                <ul class="category-mobile d-md-none list-unstyled">
                    <li>
                        <a href="" class="categories mr-2">Categories</a>
                        <i class="fas fa-caret-down"></i>
                        <ul class="category list-unstyled" style="display: none;">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (var category in categories)
                            {
                                <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                <ul class="category d-none d-md-flex list-unstyled">
                    <li><a href="" data-id="all">All</a></li>
                        @foreach (var category in categories)
                        {
                            <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>
                        }   
                </ul>
                <ul class="list-unstyled">
                    <li>
                        <a href="" class="mr-2">Filter</a>
                        <i class="fas fa-caret-down"></i>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            @foreach (var product in products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                        <div class="img">
                            <a href="">
                                <img src="~/img/@product.ImageUrl" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@product.Name</h6>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$@product.Price</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- PRODUCTS END -->
